@model ClienteViewModel

@{
    ViewBag.Title = "Borrar " + Model.NombreCompleto;
}

<h2>Borrar</h2>

<h3>Estas seguro que desea borrar este cliente?</h3>
<div>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cedula)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-horizontal" role="form" id="borrarCliente">
        <div class="form-actions">
            <a asp-action="Index">Volver</a>
            <button class="btn btn-warning col-md-offset-4" v-on="click: borrarCliente">Borrar</button>
        </div>
    </form>
</div>

@section Scripts {
    <environment names="Development">
        <script type="text/javascript">
            requirejs.config({
                map: {
                    'Cliente/borrarViewModel': {
                        'vuejs': 'lib/vue/dist/vue'
                    }
                },
                config: {
                    'Cliente/borrarViewModel': {
                        formaBorrar: '#borrarCliente',
                        mensajeBorrar: '¿Esta seguro que desea borrarlo?'
                    }
                }
            });

            requirejs(['Cliente/borrarViewModel']);
        </script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript">
            //TODO Crear las configuraciones para un ambiente de producción
            /*Url's de prod de las diferentes librerias
            Modernizr: ~/libext/modernizr/modernizr-input.min.js
            Vue: //cdnjs.cloudflare.com/ajax/libs/vue/0.12.15/vue.min.js
            Accounting: //cdnjs.cloudflare.com/ajax/libs/accounting.js/0.4.1/accounting.min.js
            Prestamo: js/Prestamo/prestamoViewModel.min.js
            */
        </script>
    </environment>
}