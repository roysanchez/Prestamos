@model IEnumerable<Negocios.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<environment names="Development">
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
</environment>
<environment names="Staging,Production">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
          asp-fallback-href="~/lib/font-awesome/css/font-awesome.css"
          asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
</environment>

<h2>Listado de clientes</h2>

<p>
    <a asp-action="Create"><i class="fa fa-plus-square-o fa-lg"></i> Crear cliente</a>
</p>
@{
//TODO Verificar que exista un tag helper para este caso
//TODO arreglar formato de la cédula
}
<table class="table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cedula)</th>
            <th>@Html.DisplayNameFor(model => model.NombreTitular)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayTextFor(model => item.Cedula)
                </td>
                <td>
                    @Html.DisplayTextFor(model => item.NombreTitular)
                </td>
                <td class="espaciado">
                    <a asp-action="Edit" asp-route-Id="@item.Id"><i class="fa fa-pencil-square-o fa-lg"></i></a>

                    <a asp-action="Details" asp-route-Id="@item.Id"><i class="fa fa-info fa-lg"></i></a>
                    <a asp-action="Delete" asp-route-Id="@item.Id"><i class="fa fa-trash-o fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>